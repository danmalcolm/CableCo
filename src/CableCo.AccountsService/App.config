<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    
    <configSections>
        <section name="rebus" type="Rebus.Configuration.RebusConfigurationSection, Rebus" />
    </configSections>
    
    <rebus inputQueue="CableCo.AccountsService.input" errorQueue="CableCo.AccountsService.error" workers="1">
        <endpoints>
            <add messages="CableCo.Provisioning.Events" endpoint="CableCo.ProvisioningService.input"/>
            <add messages="CableCo.Accounts.Events" endpoint="CableCo.AccountsService.input"/>
        </endpoints>
    </rebus>

    <connectionStrings>
        <!-- Connection used to set up local development database (note connection timeout - LocalDB can take a while to start when first accessed) -->
        <add name="setup" connectionString="Server=(localDB)\v11.0;Initial Catalog=master;Integrated Security=SSPI;Connection Timeout=60" />
        <add name="endpoint" connectionString="Server=(localDB)\v11.0;Initial Catalog=CableCo.AccountsServiceEndpoint.Dev;Integrated Security=SSPI" />
        <add name="accounts" connectionString="Server=(localDB)\v11.0;Initial Catalog=CableCo.Accounts.Dev;Integrated Security=SSPI" />
    </connectionStrings>

    <appSettings>
        <add key="Environment" value="Dev" />
    </appSettings>
    
</configuration>